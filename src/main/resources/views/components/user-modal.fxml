<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="286.0" prefWidth="300.0" spacing="10"
  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.UserModalController">
  <VBox prefHeight="200.0" prefWidth="100.0">
    <children>
      <Label text="Email"/>
      <TextField fx:id="emailField" promptText="Email" style="-fx-prompt-text-fill: #aaaaaa;"/>
    </children>
  </VBox>
  <VBox prefHeight="200.0" prefWidth="100.0">
    <children>
      <Label text="Password"/>
      <TextField fx:id="passWordField" promptText="Password"
        style="-fx-prompt-text-fill: #aaaaaa;"/>
    </children>
  </VBox>
  <VBox prefHeight="200.0" prefWidth="100.0">
    <children>
      <Label text="Display Name"/>
      <TextField fx:id="displayNameField" promptText="Display Name"
        style="-fx-prompt-text-fill: #aaaaaa;"/>
    </children>
  </VBox>
  <VBox prefHeight="200.0" prefWidth="100.0">
    <children>
      <Label text="Phone Number"/>
      <TextField fx:id="phoneNumberField" promptText="Phone Number"
        style="-fx-prompt-text-fill: #aaaaaa;"/>
    </children>
  </VBox>
  <VBox prefHeight="200.0" prefWidth="100.0">
    <children>
      <Label text="Birthday"/>
      <DatePicker fx:id="birthdayField" promptText="Birthday"
        style="-fx-prompt-text-fill: #aaaaaa;"/>
    </children>
  </VBox>
  <VBox prefHeight="48.0" prefWidth="151.0">
    <children>
      <CheckBox fx:id="adminCheckBox" text="Admin">
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
      </CheckBox>
      <CheckBox fx:id="emailVerifiedCheckBox" text="Email Verified">
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
      </CheckBox>
      <CheckBox fx:id="disabledCheckBox" text="Disabled">
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
      </CheckBox>
    </children>
  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="10"
    visible="false" style="-fx-background-color: rgba(0, 0, 0, 0.5);"
    VBox.vgrow="ALWAYS">
    <children>
      <ProgressIndicator fx:id="loadingSpinner"/>
    </children>
  </VBox>
</VBox>
