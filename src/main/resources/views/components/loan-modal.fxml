<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<VBox alignment="CENTER" prefHeight="286.0" prefWidth="300.0" spacing="10"
  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.LoanModalController">
  <StackPane prefWidth="300.0">
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
      <VBox prefHeight="200.0" prefWidth="100.0">
        <Label text="Borrow Date"/>
        <DatePicker fx:id="borrowDateField" promptText="Borrow Date"
          style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
        <padding>
          <Insets left="10.0" right="10.0"/>
        </padding>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
        <Label text="Due Date"/>
        <DatePicker fx:id="dueDateField" promptText="Due Date"
          style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
        <padding>
          <Insets left="10.0" right="10.0"/>
        </padding>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
        <Label text="Type"/>
        <ComboBox fx:id="typeField" promptText="Type"
          style="-fx-prompt-text-fill: #aaaaaa;" styleClass="combo-box"/>
        <padding>
          <Insets left="10.0" right="10.0"/>
        </padding>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
        <Label text="Copies"/>
        <TextField fx:id="copiesField" promptText="Copies"
          style="-fx-prompt-text-fill: #aaaaaa;" styleClass="input"/>
        <padding>
          <Insets left="10.0" right="10.0"/>
        </padding>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="100.0">
        <Label text="Copies"/>
        <CheckBox fx:id="validField" text="Valid"
          styleClass="check-box"/>
        <padding>
          <Insets left="10.0" right="10.0"/>
        </padding>
      </VBox>
    </VBox>
    <VBox fx:id="loadingOverlay" alignment="CENTER" spacing="10" styleClass="loading-wrapper"
      visible="false" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS">
      <Text fx:id="loadingText" text="Loading..."/>
      <ProgressIndicator fx:id="loadingSpinner"/>
      <Button fx:id="cancelButton" text="Cancel"/>
    </VBox>
  </StackPane>
</VBox>
