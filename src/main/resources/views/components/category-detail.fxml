<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<?import org.kordamp.ikonli.javafx.FontIcon?>

<StackPane styleClass="book-detail-container" xmlns="http://javafx.com/javafx/17.0.12"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.CategoryDetailController">
  <VBox spacing="20">
    <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER_LEFT">
      <Button fx:id="closeBtn" onAction="#close" styleClass="btn, btn-text">
        <graphic>
          <HBox alignment="CENTER" spacing="5">
            <FontIcon iconLiteral="anto-left" iconSize="16"/>
            <Text text="Back" styleClass="btn-text"/>
          </HBox>
        </graphic>
      </Button>
    </HBox>
    <VBox spacing="10">
      <Text fx:id="categoryTitle" styleClass="content-title"/>
      <Text fx:id="categoryDescription" styleClass="content-description"/>
    </VBox>
    <ScrollPane fx:id="categoryDetailScrollPane" hbarPolicy="NEVER" maxWidth="Infinity">
      <FlowPane fx:id="categoryDetailFlowPane" styleClass="flow-pane" vgap="10" hgap="10"/>
    </ScrollPane>
  </VBox>

  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    StackPane.alignment="CENTER">
    <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">

      <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
      <Text text="Loading..." fx:id="loadingText"/>
      <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
    </VBox>
  </VBox>
</StackPane>
