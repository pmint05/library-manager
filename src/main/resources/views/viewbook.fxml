<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<AnchorPane nodeOrientation="LEFT_TO_RIGHT" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.librarymanager.controllers.ViewBookController">
    <Region HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" />

    <HBox spacing="40" alignment="CENTER" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <children>
            <VBox alignment="TOP_LEFT" spacing="20">
                <ImageView fx:id="bookCoverImage" preserveRatio="true" style="-fx-alignment: CENTER;" HBox.hgrow="ALWAYS" />
                <HBox spacing="10">
                    <children>
                        <Button fx:id="readBookButton" style="-fx-font-size: 14px;" text="Read book" />
                        <Button fx:id="favoriteButton" style="-fx-font-size: 14px;" text="Add to favorites" />
                    </children>
                </HBox>
            </VBox>
            <VBox alignment="TOP_LEFT" spacing="20">
                <children>
                    <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" wrapText="true" />
                    <Label fx:id="authorLabel" style="-fx-font-size: 16px;" />
                    <Label fx:id="publisherLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;" />
                    <Label fx:id="pageCountLabel" style="-fx-font-size: 14px;" />
                    <Label fx:id="price" style="-fx-font-size: 14px; -fx-strikethrough: true;" />
                    <Label fx:id="descriptionlabel" wrapText="true" />
                </children>
            </VBox>
        </children>
    </HBox>
</AnchorPane>
