<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>


<AnchorPane xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="com.app.librarymanager.controllers.ManageCategoriesController">
  <VBox spacing="10" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0"
    AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
    <Text styleClass="content-title" text="Manage Categories"/>
    <HBox alignment="BOTTOM_LEFT" spacing="10">
      <TextField fx:id="searchField" onKeyReleased="#onSearch" promptText="Search..."
        styleClass="input"/>
      <Button text="New Category" onAction="#onCreateCategory" styleClass="btn,btn-primary"/>
    </HBox>
    <TableView fx:id="bookLoansTable" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
      <columns>
        <TableColumn fx:id="_idColumn" text="_id"/>
        <TableColumn fx:id="nameColumn" text="Name"/>
        <TableColumn fx:id="createdAtColumn" text="Created At"/>
        <TableColumn fx:id="updatedAtColumn" text="Updated At"/>
        <TableColumn fx:id="actionAtColumn" text="Action"/>
      </columns>
    </TableView>
  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
    AnchorPane.rightAnchor="0.0">
    <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
    <Text text="Loading..." fx:id="loadingText"/>
  </VBox>
</AnchorPane>
