<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/17.0.12"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.ProfileController">
  <VBox spacing="10">
    <TabPane tabClosingPolicy="UNAVAILABLE">
      <Tab text="Personal Info">
        <HBox fx:id="hBox" alignment="TOP_CENTER" spacing="10">
          <VBox spacing="10">
            <HBox fx:id="avatarContainer" alignment="TOP_CENTER" visible="false">
              <StackPane fx:id="imageStackPane">
                <ImageView fx:id="profileImageView" cache="true" fitHeight="100.0" fitWidth="100.0"
                  preserveRatio="true" styleClass="profile-image-upload"
                  StackPane.alignment="CENTER">
                  <clip>
                    <Circle centerX="50.0" centerY="50.0" radius="50.0"/>
                  </clip>
                </ImageView>
                <Label fx:id="changeAvatarLabel" mouseTransparent="true"
                  styleClass="change-avatar-label" text="Change" visible="false"/>
              </StackPane>
            </HBox>
            <GridPane hgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0"/>
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
              </rowConstraints>
              <children>
                <Label text="ID:"/>
                <Label text="Email:" GridPane.rowIndex="1"/>
                <Text fx:id="localIdField" disable="true" GridPane.columnIndex="1"/>
                <Text fx:id="emailField" disable="true" GridPane.columnIndex="1"
                  GridPane.rowIndex="1"/>
              </children>
            </GridPane>
            <padding>
              <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
          </VBox>
          <Separator orientation="VERTICAL" prefHeight="200.0" styleClass="v-separator"/>
          <VBox spacing="10">
            <Label text="Display Name:"/>
            <TextField fx:id="displayNameField" promptText="John Doe" styleClass="input"/>
            <Label text="Phone Number:"/>
            <TextField fx:id="phoneNumberField" promptText="+84123456789" styleClass="input"/>
            <Label text="Birthday:"/>
            <DatePicker fx:id="birthdayField"/>
            <HBox alignment="BOTTOM_CENTER">
              <VBox.margin>
                <Insets top="15.0"/>
              </VBox.margin>
              <Button fx:id="saveChangesButton" disable="true" onAction="#handleSaveChanges"
                styleClass="btn, btn-primary" text="Save Changes" HBox.hgrow="ALWAYS">
                <HBox.margin>
                  <Insets/>
                </HBox.margin>
              </Button>
            </HBox>
            <padding>
              <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
          </VBox>
          <opaqueInsets>
            <Insets/>
          </opaqueInsets>
          <padding>
            <Insets top="50.0"/>
          </padding>
        </HBox>
      </Tab>
      <Tab text="Security Setting">
        <HBox alignment="TOP_CENTER" spacing="10">
          <VBox spacing="10">
            <Label text="Old Password:"/>
            <PasswordField fx:id="oldPasswordField" promptText="Your old password"
              styleClass="input"/>
            <Label text="New Password:"/>
            <PasswordField fx:id="newPasswordField" promptText="Your new password"
              styleClass="input"/>
            <HBox alignment="BOTTOM_CENTER">
              <VBox.margin>
                <Insets top="15.0"/>
              </VBox.margin>
              <Button fx:id="updatePasswordButton" disable="true" onAction="#handleUpdatePassword"
                styleClass="btn, btn-primary" text="Update Password" HBox.hgrow="ALWAYS">
                <HBox.margin>
                  <Insets/>
                </HBox.margin>
              </Button>
            </HBox>
            <padding>
              <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
          </VBox>
          <padding>
            <Insets top="50.0"/>
          </padding>
        </HBox>
      </Tab>
    </TabPane>
  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    StackPane.alignment="CENTER">
    <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">

      <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
      <Text text="Loading..." fx:id="loadingText"/>
      <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
    </VBox>
  </VBox>
</StackPane>
