<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.app.librarymanager.controllers.MyLoansController">
  <VBox spacing="10">
    <padding>
      <Insets bottom="20" left="20" right="20" top="20"/>
    </padding>
    <Text styleClass="content-title" text="My Book Loans"/>
    <FlowPane hgap="10" vgap="10">
      <HBox spacing="10">
        <VBox spacing="3">
          <Label text="Search:"/>
          <TextField fx:id="searchField" styleClass="input" promptText="Search Loans..."/>
        </VBox>
        <VBox spacing="3">
          <Label text="Filter by Validity:"/>
          <ComboBox fx:id="validityFilter" styleClass="combo-box" promptText="Filter by Validity"/>
        </VBox>
        <VBox spacing="3">
          <Label text="Filter by Mode:"/>
          <ComboBox fx:id="modeFilter" styleClass="combo-box" promptText="Filter by Mode"/>
        </VBox>
      </HBox>
      <Region HBox.hgrow="ALWAYS"/>
      <HBox spacing="10">
        <Label text="Page Size:"/>
        <ComboBox fx:id="pageSize" styleClass="combo-box"/>
      </HBox>
      <HBox spacing="10">
        <Button fx:id="prevPageButton" text="Previous" styleClass="btn, btn-default"/>
        <Button fx:id="nextPageButton" text="Next" styleClass="btn, btn-default"/>
      </HBox>
    </FlowPane>
    <Label fx:id="searchStatus" styleClass="search-status"/>
    <ScrollPane fx:id="loansScrollPane" hbarPolicy="NEVER" styleClass="scroll-pane"
      maxWidth="Infinity">
      <FlowPane fx:id="loansFlowPane" styleClass="flow-pane" vgap="10" hgap="10"/>
    </ScrollPane>
  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false"
    StackPane.alignment="CENTER">
    <VBox styleClass="loading-inner" alignment="CENTER" maxWidth="200">

      <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100"/>
      <Text text="Loading..." fx:id="loadingText"/>
      <Button text="Cancel" fx:id="cancelButton" styleClass="btn, btn-text"/>
    </VBox>
  </VBox>
</StackPane>