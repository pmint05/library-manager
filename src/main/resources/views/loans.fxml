<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.librarymanager.controllers.MyLoansController">
  <VBox spacing="10">
    <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <Text styleClass="content-title" text="My Book Loans" />
    <FlowPane fx:id="loansFlowPane" styleClass="flow-pane" vgap="10" hgap="10" />
  </VBox>
  <VBox fx:id="loadingOverlay" alignment="CENTER" styleClass="loading-wrapper" visible="false" StackPane.alignment="CENTER">
    <Text fx:id="loadingText" text="Loading..." />
    <ProgressIndicator fx:id="loadingSpinner" maxHeight="100" maxWidth="100" />
    <Button fx:id="cancelButton" styleClass="btn, btn-text" text="Cancel" />
  </VBox>
</StackPane>
